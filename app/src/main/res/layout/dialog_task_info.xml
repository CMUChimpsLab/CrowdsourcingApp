<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <TextView
        android:id="@+id/dialog_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:text="Task Name" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_task_name"
        android:layout_alignParentStart="true"
        android:text="Cost ($): " />

    <TextView
        android:id="@+id/dialog_task_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dialog_task_name"
        android:text="0" />

    <TextView
        android:id="@+id/dialog_task_response_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/dialog_task_cost"
        android:layout_marginTop="10dp"
        android:text="My Responses" />

    <LinearLayout
        android:id="@+id/dialog_task_response_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_task_response_title"
        android:orientation="vertical"/>

</RelativeLayout>